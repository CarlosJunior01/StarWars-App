<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchButtonDefault">
        <item name="android:background">@drawable/layout_card_statelist</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearanceDefaultBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearanceBold14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearanceBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:textColor">@color/gray_3232</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceShadow16">
        <item name="android:layout_width">@dimen/size_0_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">2.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="TextAppearanceShadow24">
        <item name="android:layout_width">@dimen/size_0_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_8_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_24_sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">2.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="EditTextAppearanceBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_3232</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>