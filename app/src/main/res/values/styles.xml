<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchButtonDefault">
        <item name="android:background">@drawable/layout_card_statelist</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearanceBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:textColor">@color/gray_3232</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextAppearanceBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_4_dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_3232</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>